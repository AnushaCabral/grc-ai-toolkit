# LLM Provider API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# LLM Configuration
LLM_PROVIDER=openai  # or "anthropic", "groq"
LLM_MODEL=gpt-4  # or "gpt-4-turbo-preview", "claude-sonnet-4-20250514", "llama-3.3-70b-versatile", etc.
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# Cost & Performance
LLM_ENABLE_CACHING=True
LLM_ENABLE_COST_TRACKING=True
LLM_MAX_RETRIES=3

# Vector Store (for RAG)
VECTOR_STORE_TYPE=faiss  # or "chroma"
VECTOR_STORE_PERSIST_DIR=./data/vector_store
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Streamlit Configuration (if using UI)
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# Development
DEBUG=False
LOG_LEVEL=INFO
